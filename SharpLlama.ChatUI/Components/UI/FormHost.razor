
@using global::SharpLlama.ChatUI.Components.UI
@inherits FormHostBase


@foreach (var n in Nodes)
{
    <DynamicComponent Type="n.Component.ComponentType"
                      Parameters="n.Component.Params"
                      @key="n.Component.Id" />
    @if (n.Children?.Count > 0)
    {
        @foreach (var c in n.Children)
        {
            <DynamicComponent Type="c.Component.ComponentType"
                              Parameters="c.Component.Params"
                              @key="c.Component.Id" />
        }
    }
}
